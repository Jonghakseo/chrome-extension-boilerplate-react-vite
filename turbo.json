{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["__FIREFOX__", "__DEV__"],
  "tasks": {
    "ready": {
      "dependsOn": ["^ready"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "dependsOn": ["ready"],
      "outputs": ["dist/**", "build/**", "i18n/locales/**"],
      "persistent": true
    },
    "build": {
      "dependsOn": ["ready", "^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "e2e": {
      "dependsOn": ["zip"],
      "cache": false
    },
    "type-check": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "prettier": {
      "cache": false
    },
    "clean:node_modules": {
      "dependsOn": ["^clean:node_modules"],
      "cache": false
    },
    "clean:turbo": {
      "dependsOn": ["^clean:turbo"],
      "cache": false
    },
    "clean:bundle": {
      "dependsOn": ["^clean:bundle"],
      "cache": false
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "zip": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
