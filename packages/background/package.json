{
  "name": "@chrome-extension-boilerplate/background",
  "version": "0.0.1",
  "description": "chrome extension background script",
  "private": true,
  "sideEffects": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "pnpm run clean && tsc --noEmit && vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "dev": "pnpm build:watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "webextension-polyfill": "0.10.0",
    "@chrome-extension-boilerplate/shared": "workspace:*"
  },
  "devDependencies": {
    "@chrome-extension-boilerplate/tsconfig": "workspace:*",
    "@chrome-extension-boilerplate/hmr-old": "workspace:*",
    "vite": "5.0.12"
  }
}
